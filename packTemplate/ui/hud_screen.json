{
	"namespace": "hud",
	
	"hud_content": {
		"modifications": [
			{
				"array_name": "controls",
				"operation": "insert_front",
				"value": [
					{
						"material_list_tab_button": {
							"type": "button",
							"size": ["100%", "100%"],
							"default_control": "default",
							"hover_control": "hover",
							"pressed_control": "pressed",
							"button_mappings": [
								{
									"from_button_id": "button.scoreboard", // tab key
									"to_button_id": "button.dummy",
									"mapping_type": "global"
								}
							],
							"controls": [
								{
									"default": {
										"type": "input_panel",
										"button_mappings": [
											{
												"from_button_id": "button.inventory_left",
												"to_button_id": "button.hotbar_inventory_left",
												"mapping_type": "global"
											},
											{
												"from_button_id": "button.inventory_right",
												"to_button_id": "button.hotbar_inventory_right",
												"mapping_type": "global"
											}
										]
									}
								},
								{
									"hover": {
										"type": "input_panel",
										"button_mappings": [
											{
												"from_button_id": "button.inventory_left",
												"to_button_id": "button.hotbar_inventory_left",
												"mapping_type": "global"
											},
											{
												"from_button_id": "button.inventory_right",
												"to_button_id": "button.hotbar_inventory_right",
												"mapping_type": "global"
											}
										]
									}
								},
								{
									"pressed": {
										"type": "panel",
										"anchor_from": "top_middle",
										"anchor_to": "top_middle",
										"offset": [0, 23],
										"layer": 50,
										"controls": [
											{
												"material_list_wrapper@hud.material_list_wrapper": {}
											}
										]
									}
								}
							]
						}
					}
				]
			}
		]
	},
	"material_list_wrapper": {
		"type": "image",
		"size": ["40%", "this gets put in by the JS"],
		"max_size": ["40%", "100% - 84px"],
		"texture": "textures/ui/White",
		"color": [0, 0, 0],
		"alpha": 0.5,
		"layer": 10,
		"anchor_from": "top_middle",
		"anchor_to": "top_middle",
		"controls": [
			{
				"material_list_heading@hud.material_list_heading": {}
			},
			{
				"material_list_scrolling_panel@common.scrolling_panel": {
					"anchor_from": "bottom_middle",
					"anchor_to": "bottom_middle",
					"size": ["100%", "100% - 12px"],
					"$show_background": false,
					"$scrolling_content": "hud.material_list",
					"$always_handle_scrolling": true
				}
			}
		],
		"bindings": [
			{
				"binding_name": "#hud_visible",
				"binding_name_override": "#visible",
				"binding_type": "global"
			}
		]
	},
	"material_list_heading": {
		"type": "image",
		"anchor_from": "top_middle",
		"anchor_to": "top_middle",
		"size": ["100%", 12],
		"texture": "textures/ui/White",
		"color": [0, 0, 0],
		"alpha": 0.2,
		"controls": [
			{
				"book_icon": {
					"type": "image",
					"offset": [1, 0],
					"size": [14.62, 10],
					"anchor_from": "left_middle",
					"anchor_to": "left_middle",
					// "texture": "textures/ui/creative_icon"
					"texture": "textures/ui/recipe_book_icon"
				}
			},
			{
				"pack_name": {
					"type": "label",
					"size": ["100% - 18px", 10],
					"text": "Material List: ", // pack name gets put in here
					"anchor_from": "right_middle",
					"anchor_to": "right_middle"
				}
			}
		]
	},
	"material_list": {
		"type": "stack_panel",
		"orientation": "vertical",
		"anchor_to": "top_left",
		"anchor_from": "top_left",
		"controls": []
	},
	"material_list_entry": {
		"type": "image",
		"size": ["100%", 12],
		"texture": "textures/ui/White",
		"color": [0, 0, 0],
		"alpha": "$background_opacity",
		"layer": 100,
		"controls": [
			{
				"content": {
					"type": "stack_panel",
					"orientation": "horizontal",
					"size": ["100%", "100%"],
					"offset": [0, 1],
					"layer": 101,
					"controls": [
						{
							"padding_1": {
								"type": "panel",
								"size": [1, 0]
							}
						},
						{
							"item_icon": {
								"type": "custom",
								"renderer": "inventory_item_renderer",
								"property_bag": {
									"#item_id_aux": "$item_id_aux"
								},
								"size": [10, 10],
								"anchor_from": "top_left",
								"anchor_to": "top_left"
							}
						},
						{
							"padding_2": {
								"type": "panel",
								"size": [2, 0]
							}
						},
						{
							"item_name": {
								"type": "label",
								"text": "$item_translation_key",
								"localize": true,
								"size": ["100% - 13px - 70px", 10], // leave 70px for the block count
								"font_scale_factor": 0.8
							}
						},
						{
							"item_count": {
								"type": "label",
								"text": "$item_count",
								"size": ["fill", 10],
								// "text_alignment": "right",
								"font_scale_factor": 0.8
							}
						}
					]
				}
			}
		]
	},
	"hud_screen": {
		"button_mappings": [ // this is the same as the original, except the inventory_left and inventory_right mappings are left out, so they can be conditionally applied depending on visibility of the material list.
			{
				"from_button_id": "button.scoreboard",
				"to_button_id": "button.scoreboard",
				"mapping_type": "global"
			},
			{
