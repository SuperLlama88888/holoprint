				"to_button_id": "button.hide_tooltips_hud",
				"mapping_type": "global"
			},
			{
				"from_button_id": "button.hide_paperdoll",
				"to_button_id": "button.hide_paperdoll_hud",
				"mapping_type": "global"
			},
			{
				"from_button_id": "button.slot1",
				"to_button_id": "button.slot_1",
				"mapping_type": "global"
			},
			{
